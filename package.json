{
  "name": "react-app-template",
  "description": "Template for creating React + Redux universal applications.",
  "author": "Rodrigo Ortega <rodrigo.ortega@travelport.com>",
  "contributors": [],
  "version": "0.0.0",
  "engines": {
    "node": ">=6 <8",
    "npm": ">=3.3 <4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asdelday/react-app-template"
  },
  "homepage": "https://github.com/asdelday/react-app-template",
  "main": "bin/server.js",
  "scripts": {
    "start": "npm run start-prod",
    "start-prod": "better-npm-run start-prod",
    "dev": "concurrent --kill-others \"npm run watch-client\" \"npm run start-dev\"",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "better-npm-run watch-client",
    "build": "better-npm-run build",
    "test": "better-npm-run test",
    "test:watch": "karma start",
    "lint": "eslint . --ext .js --ext .jsx",
    "version-major": "npm version major -m \"v%s\"",
    "version-minor": "npm version minor -m \"v%s\"",
    "version-patch": "npm version patch -m \"v%s\"",
    "posttest": "npm run lint",
    "preversion": "npm test",

    "build-server": "bnr build-server"
  },
  "betterScripts": {
    "build-server": {
      "command": "webpack --colors --display-error-details --config webpack/server.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },

    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "start-dev": {
      "command": "nodemon --watch src -e js,jsx ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "build": {
      "command": "webpack --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "karma start",
      "env": {
        "CI": true
      }
    }
  },
  "dependencies": {
    "babel-core": "6.24.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-display-name": "6.23.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.24.0",
    "babel-preset-react": "6.23.0",
    "babel-preset-stage-1": "6.22.0",
    "babel-register": "6.24.0",
    "better-npm-run": "0.0.15",
    "classnames": "2.2.5",
    "compression": "1.6.2",
    "express": "4.15.2",
    "http-proxy": "1.16.2",
    "pretty-error": "2.0.3",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-helmet": "5.0.2",
    "react-redux": "5.0.3",
    "react-router": "3.0.2",
    "react-router-redux": "4.0.8",
    "redux": "3.6.0",
    "redux-saga": "0.14.3",
    "reselect": "3.0.0",
    "serialize-javascript": "1.3.0",
    "serve-favicon": "2.4.2",
    "uuid": "3.0.1",
    "webpack-isomorphic-tools": "3.0.2"
  },
  "devDependencies": {
    "babel-eslint": "7.2.1",
    "babel-loader": "6.4.1",
    "babel-plugin-istanbul": "4.1.1",
    "chai": "3.5.0",
    "clean-webpack-plugin": "0.1.16",
    "concurrently": "3.4.0",
    "css-loader": "0.27.3",
    "enzyme": "2.8.0",
    "eslint": "3.18.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-loader": "1.7.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.3",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.10.1",
    "json-loader": "0.5.4",
    "karma": "1.5.0",
    "karma-chai": "0.1.0",
    "karma-coverage": "1.1.1",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.3",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.3",
    "mocha": "3.2.0",
    "nodemon": "1.11.0",
    "normalize.css": "6.0.0",
    "phantomjs-prebuilt": "2.1.14",
    "postcss-cssnext": "2.10.0",
    "postcss-import": "9.1.0",
    "postcss-loader": "1.3.3",
    "postcss-reporter": "3.0.0",
    "react-addons-test-utils": "15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "redux-devtools": "3.3.2",
    "redux-devtools-dock-monitor": "1.1.1",
    "redux-devtools-log-monitor": "1.2.0",
    "sinon": "2.1.0",
