{
  "presets": ["react", "es2015", "stage-0"],
  "plugins": [
    "transform-runtime",
    "add-module-exports",
    "transform-react-display-name",
    "transform-react-constant-elements"
  ],
  "env": {
    "development": {
      "plugins": [
        ["react-hot-loader/babel"]
      ]
    },
    "test": {
      "plugins": [
        ["istanbul", { "exclude": ["**/*.spec.*"] }]
      ]
    }
  }
}
